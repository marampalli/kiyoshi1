    stages {

        stage('Terraform runtime') {
            agent {
                docker {
                    image 'hashicorp/terraform'
                    reuseNode true
                    args "-u root -v /var/run/docker.sock:/var/run/docker.sock --entrypoint=''"
                }
            }

            steps {
                withCredentials([usernamePassword(credentialsId: 'mveekshitha-aws', passwordVariable: 'AWS_SECRET_ACCESS_KEY', usernameVariable: 'AWS_ACCESS_KEY_ID')]) {
                    sh '''
                        terraform --version
                        terraform init
                        terraform plan
                    '''
                }
            }
        }        

    }   
